<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Example" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primaryLight</item>
        <item name="android:windowBackground">@color/paleGrey</item>
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
    </style>

    <!--Toolbar-->
    <style name="ToolBarStyle" parent="ToolBarStyle.Base"/>

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Dialog-->
    <style name="Theme.BottomSheetDialog.RoundedTopCorners" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.BottomSheetDialog.RoundedTopCorners.Style</item>
    </style>

    <style name="Theme.BottomSheetDialog.RoundedTopCorners.Style" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_rounded_top_corners</item>
    </style>

    <style name="Theme.BottomSheetDialog.RoundedTopCorners.Input">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="FullScreenDialogTheme" parent="Theme.Example">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <!--Switch-->
    <style name="Switch.DarkSkyBlue" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlActivated">@color/darkSkyBlue</item>
    </style>

    <!--TabLayout-->
    <style name="TabDefaultTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--App Button-->
    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Vanilla">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="Button.Vanilla.SolidPrimary">
        <item name="android:background">@drawable/bg_button_primary_solid</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Vanilla.SolidPrimary.Rounded">
        <item name="android:background">@drawable/bg_button_cerulean_solid_capsule</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Vanilla.SolidPrimary.Rounded.Thin">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Button.Vanilla.StrokePrimary">
        <item name="android:background">@drawable/bg_button_primary_stroke</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Button.Vanilla.SolidWhite">
        <item name="android:background">@drawable/bg_button_white_solid</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Button.Vanilla.StrokeWhiteTwo">
        <item name="android:background">@drawable/bg_button_white_two_stroke</item>
        <item name="android:textColor">@color/whiteTwo</item>
    </style>

    <style name="Button.Vanilla.StrokeBrownishkGrey">
        <item name="android:background">@drawable/bg_button_white_two_stroke</item>
        <item name="android:textColor">@color/brownishGrey</item>
    </style>

    <style name="Button.Vanilla.Schedule">
        <item name="android:background">@drawable/bg_button_schedule</item>
        <item name="android:textColor">@color/color_text_button_schedule</item>
        <item name="android:drawableStart">@drawable/ic_schedule_button</item>
    </style>

    <style name="Button.Vanilla.Tip">
        <item name="android:background">@drawable/bg_button_tip</item>
        <item name="android:textColor">@color/color_text_button_tip</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="Button.Rounded">
        <item name="android:background">@drawable/bg_button_cerulean_solid_capsule</item>
        <item name="android:textColor">@color/primary_button_text_selector</item>
    </style>

    <style name="Button.Rounded.IceBlue" parent="Button.Rounded">
        <item name="android:background">@drawable/bg_button_cerulean_solid_iceblue_capsule</item>
    </style>
</resources>